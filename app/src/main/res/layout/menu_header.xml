<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#000000">

    <TextView
        android:id="@+id/slogan_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slogan_name"
        android:textColor="@color/white"
        android:fontFamily="@font/carter_one"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/logo_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logo_name"
        android:fontFamily="@font/carter_one"
        android:layout_above="@+id/slogan_tv"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/pesa_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/pesa"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/logo_name_tv"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="210dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/half_logo"/>

</RelativeLayout>